<div id="<%= dom_id friend %>">
<% if user_signed_in? %>
<h1>Friends List</h1>

  <table class="table table-striped table-bordered table-hover">
     <thead class="thead-dark">
            <tr>
              <th>Name </th>
              <th>Email</th>
              <th>phone</th>
              <th>Twiter</th>
              <th>Password</th>
              <th>Instagram</th>
              <th>Facebook</th>
              <th>Favourite</th>
              <th>Birth date </th>
              <th>User Id </th>
              <th>Description</th>
              <th></th>
            </tr>
    </thead>
    <tbody>
        <% @friends.each do |friend| %>

        <!-- so only the friends that are associated to that user show -->
        <% if friend.user == current_user %>
          <tr>
            <td>
              <!-- <%= link_to 'Show', friend %> -->
              <!-- <%= friend.first_name %> -->
              <!-- <%= friend.last_name %> -->
              <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
            </td>
            <td><%= friend.email %></td>  
            <td><%= friend.phone %></td>
            <td><%= friend.twitter %></td>
            <td><%= friend.password %></td>
            <td><%= friend.instagram %></td>
            <td><%= friend.facebook %></td>
            <td><%= friend.favourite %></td>
            <td><%= friend.birth_date %></td>
            <td><%= friend.user_id %></td>
            <td><%= friend.description %></td>
            
            
            <!-- <td><%= link_to 'Show', friend %></td> -->
            <!-- % if friend.user == current_user % -->
            <!-- <td><%= link_to 'Edit', edit_friend_path(friend) %></td> -->
            <td><%= link_to 'Delete', friend, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger btn-sm"%></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
<br>
  
<%= link_to 'New Friend', new_friend_path, class:"btn btn-light" %>

<br>

<% else %>

<div class="header">
  <h2></h2>
</div>

<% end %>














































